<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light"> </style>

    <style name="NoActionBarTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:searchViewStyle">@style/MyActionBarWidgetTheme</item>
    </style>

    <style name="MyActionBarWidgetTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>




    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light"/>


    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorAccent</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/roundborder</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="App_EditTextDisable" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/roundborder_disable</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="mySpinnerStyle" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:background">@drawable/roundborder</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
