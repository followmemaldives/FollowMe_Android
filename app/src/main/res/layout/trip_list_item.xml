<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:descendantFocusability="blocksDescendants">

 
    <!-- Artist Name -->
    <TextView
            android:id="@+id/trip_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Header" />
    <LinearLayout
            android:id="@+id/layout_log_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <!--    <TextView
            android:id="@+id/trip_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:layout_marginLeft="5dp"
            android:text="" /> -->
        <TextView
            android:id="@+id/trip_date"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:layout_toRightOf="@+id/trip_name"
            android:layout_marginLeft="20dp"
            android:text="" />
        <TextView
            android:id="@+id/trip_status"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:layout_toRightOf="@+id/trip_date"
            android:text="" />

        <TextView
            android:id="@+id/trip_island"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:layout_toRightOf="@+id/trip_status"
            android:text="" />
    </LinearLayout>
     <!-- Rightend Arrow -->


</RelativeLayout>